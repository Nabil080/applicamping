{% macro basic(statut) %}
	{% set s = statut|lower %}

	{% if s is same as "en service" %}
		{% set classes = "success" %}
	{% elseif s is same as "aucun"%}
		{% set classes = "warning" %}
	{% endif %}

	<span class="badge {{ classes }}">{{ statut }}</span>
{% endmacro %}


