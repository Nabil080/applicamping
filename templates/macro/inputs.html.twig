{% macro checkSlide(text, option = {})  %}

	{% set checked = option.checked is defined ? 'checked' : '' %}
	{% set name = option.name is defined ? "name='" ~ option.name ~ "'"  : '' %}
	{% set value = option.value is defined ? "value='" ~ option.value ~ "'" : '' %}
	{% set color = option.color is defined ? option.color : 'main-600' %}

	<label class="relative flex items-center cursor-pointer">
		<input type="checkbox" class="sr-only peer" {{ checked }} {{ value }} {{ name }}>
		<div class="w-9 h-5 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-main-300 dark:peer-focus:ring-main-800 rounded-full peer dark:bg-gray-700 peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-4 after:w-4 after:transition-all dark:border-gray-600 peer-checked:bg-{{color}}"></div>
		<span class="ml-3 text-sm font-medium text-gray-900 dark:text-gray-300">{{ text }}</span>
	</label>
{% endmacro %}
