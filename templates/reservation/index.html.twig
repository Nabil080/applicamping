{% extends 'base.html.twig' %}

{% block title %}Hello ReservationController!
{% endblock %}

{% block body %}

	<section class="title">
		<h1>Espace réservation</h1>
	</section>

	{# ! Durée du séjour #}
	<section class="step-container my-6 mx-[15%]">
		<section class="step-content border-2 border-black divide-y-2 divide-black [&>div]:py-10 [&>*]:px-[15%] bg-white">
			<h2 class="text-2xl text-center font-semibold py-6">Définissez votre séjour</h2>
			{# ! Date du séjour #}
			<div>
				<h3 class="font-semibold text-3xl">Quand ?</h3>
				<div {{ stimulus_controller('date_picker') }} class="flex flex-wrap gap-6 items-center mt-6 [&_i]:text-3xl [&_label]:text-2xl [&_input]:text-2xl">
					<div class="flex gap-6 items-center">
						<i class="fa fa-calendar text-3xl"></i>
						<label for="start">Du</label>
						<input name="start" type class="w-fit px-4 py-2 border-black caret-transparent cursor-pointer ">
					</div>
					<div class="flex gap-6 items-center">
						<i class="fa fa-calendar text-3xl"></i>

						<label for="end">Au</label>
						<input name="end" type class="w-fit px-4 py-2  border-black caret-transparent cursor-pointer ">
					</div>
				</div>
			</div>
			{# ! Nombre de personnes #}
			<div>
				<h3 class="font-semibold text-3xl">Qui ?</h3>
				<div class="flex flex-wrap gap-12 items-center mt-6 [&_label]:text-2xl [&_input]:text-[2rem]">
					<div class="flex gap-6 items-center">
						<i class="fa-solid fa-person text-3xl"></i>
						<label for="adult-counter">
							Adultes</label>
						<div class="relative flex items-center">
							<button data-input-counter-decrement="adult-counter" class="">
								<i class="fa fa-minus text-xl"></i>
							</button>
							<input type="text" id="adult-counter" data-input-counter class="max-w-[3ch] text-center focus:outline-none select-none cursor-default" placeholder="0" value="1" readonly required>
							<button data-input-counter-increment="adult-counter" class="">
								<i class="fa fa-plus text-xl"></i>
							</button>
						</div>
					</div>
					<div class="flex gap-6 items-center">
						<i class="fa-solid fa-child text-3xl"></i>
						<label for="child-counter">
							Enfants</label>
						<div class="relative flex items-center">
							<button data-input-counter-decrement="child-counter" class="">
								<i class="fa fa-minus text-xl"></i>
							</button>
							<input type="text" id="child-counter" data-input-counter class="max-w-[3ch] text-center focus:outline-none select-none cursor-default" placeholder="0" value="0" readonly required>
							<button data-input-counter-increment="child-counter" class="">
								<i class="fa fa-plus text-xl"></i>
							</button>
						</div>
					</div>
				</div>
			</div>
		</section>
		<section id="nav-buttons" class="mt-12 flex justify-between">
			<button class="button" disabled>Précédent</button>
			<button class="button">Suivant</button>
		</section>
	</section>

	{# !!!! PROGRES BAR !!!! #}


	<section id="progress" class="flex xl:mx-32 my-20 gap-12 justify-center">
		<ol class="items-center w-fit space-y-4 sm:flex sm:space-x-8 sm:space-y-0 text-lg">
			<li class="flex items-center text-main-600 space-x-2.5">
				<span class="flex items-center justify-center w-8 h-8 border border-main-600 rounded-full shrink-0">
					1
				</span>
				<span>
					<h3 class="font-medium leading-tight">Durée du séjour</h3>
					<p class="text-sm">Des bon détails</p>
				</span>
			</li>
			<li class="flex items-center text-gray-500 dark space-x-2.5">
				<span class="flex items-center justify-center w-8 h-8 border border-gray-500 rounded-full shrink-0">
					2
				</span>
				<span>
					<h3 class="font-medium leading-tight">Type d'hébérgement</h3>
					<p class="text-sm"></p>
				</span>
			</li>
			<li class="flex items-center text-gray-500 dark space-x-2.5">
				<span class="flex items-center justify-center w-8 h-8 border border-gray-500 rounded-full shrink-0">
					3
				</span>
				<span>
					<h3 class="font-medium leading-tight">Choix de l'emplacement</h3>
					<p class="text-sm"></p>
				</span>
			</li>
			<li class="flex items-center text-gray-500 dark space-x-2.5">
				<span class="flex items-center justify-center w-8 h-8 border border-gray-500 rounded-full shrink-0">
					3
				</span>
				<span>
					<h3 class="font-medium leading-tight">Options supplémentaires</h3>
					<p class="text-sm"></p>
				</span>
			</li>
			<li class="flex items-center text-gray-500 dark space-x-2.5">
				<span class="flex items-center justify-center w-8 h-8 border border-gray-500 rounded-full shrink-0">
					3
				</span>
				<span>
					<h3 class="font-medium leading-tight">Récapitulatif</h3>
					<p class="text-sm"></p>
				</span>
			</li>
		</ol>

		<div id="order-button">
			<button class="button" disabled>Réserver</button>
			<div>Montant :
				<span id="current-price">
					0
				</span>€</div>
		</div>

	</section>


{% endblock %}
