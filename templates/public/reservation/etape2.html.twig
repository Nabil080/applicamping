{% import "macro/cards.html.twig" as cards %}

{# ! Etape 2 : Type d'hébérgement #}
<article data-step class="step-content hidden border-2 border-stroke shadow-default divide-y-2 divide-stroke bg-white">
	<h2 class="text-2xl text-center font-semibold py-6">Choisissez votre type d'hébèrgement</h2>
	<div class="slider select-none">
		<div {{stimulus_controller('swiper')}} class="swiper-container">
			<div
				class="swiper-wrapper">
				{# cards #}
				{% for i in 1..10 %}
					{{ cards.hebergement(i) }}
				{% endfor %}
			</div>


			<!-- scrollbar -->
			<div class="swiper-scrollbar"></div>

			<!-- buttons -->
			<div class="swiper-button-prev"></div>
			<div class="swiper-button-next"></div>
		</div>
	</div>
</article>
