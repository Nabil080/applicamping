{% use 'tailwind_2_layout.html.twig' %}


{# Modifie toutes les lignes #}
{%- block form_row -%}
<div class="mb-4.5">
	{%- if errors|length > 0 -%}
		{{- form_label(form, null, {'label_attr': {'class': 'block text-danger mb-2.5'}}) -}}
		{{- form_widget(form, {'attr': {'class': 'w-full rounded border-[1.5px] border-dark bg-transparent py-3 px-5 font-medium outline-none transition focus:border-primary active:border-primary disabled:cursor-default disabled:bg-whiter dark:border-form-strokedark dark:bg-form-input dark:focus:border-danger'}}) -}}
		{{- form_errors(form) -}}
	{% else %}
		{{- form_label(form, null, {'label_attr': {'class': 'block text-black dark:text-white mb-2.5'}}) -}}
		{{- form_widget(form, {'attr': {'class': 'w-full rounded border-[1.5px] border-stroke bg-transparent py-3 px-5 font-medium outline-none transition focus:border-primary active:border-primary disabled:cursor-default disabled:bg-whiter dark:border-form-strokedark dark:bg-form-input dark:focus:border-primary'}}) -}}
	{%- endif -%}

</div>{%- endblock %}
