<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}{% endblock %}
			| Admin Camping Mont-Olympe
		</title>
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		{% block stylesheets %}
			{{ encore_entry_link_tags('admin') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('admin') }}
		{% endblock %}
		<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.min.js"></script>
		<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

		<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet"/>
	</head>
	<body x-data="{ page: 'admin', 'loaded': true, 'darkMode': true, 'stickyMenu': false, 'sidebarToggle': false, 'scrollTop': false }" x-init="darkMode = JSON.parse(localStorage.getItem('darkMode'));$watch('darkMode', value => localStorage.setItem('darkMode', JSON.stringify(value)))" :class="{'dark text-bodydark bg-boxdark-2': darkMode === true}">

		<!-- ===== Preloader Start ===== -->
		{# <include src="./partials/preloader.html"></include> #}
		<!-- ===== Preloader End ===== -->

		<!-- ===== Page Wrapper Start ===== -->
			<div
			class="flex h-screen overflow-hidden"> <!-- ===== Sidebar Start ===== -->
			{% include "admin/include/sidebar.html.twig" %}
			<!-- ===== Sidebar End ===== -->

			<!-- ===== Content Area Start ===== -->
				<div
				class="relative flex flex-1 flex-col overflow-y-auto overflow-x-hidden"> <!-- ===== Header Start ===== -->
				{% include "admin/include/header.html.twig" %}
				<!-- ===== Header End ===== -->

				<!-- ===== Main Content Start ===== -->
					<main>
						<div class="mx-auto max-w-screen-2xl p-4 md:p-6 2xl:p-10">{% block body %}{% endblock %} </div>
					</main>
					<!-- ===== Main Content End ===== -->
				</div>
				<!-- ===== Content Area End ===== -->
			</div>
			<!-- ===== Page Wrapper End ===== -->


			{# modals ! #}
			{% block modals %}{% endblock %}

			<script>
				$(document).ready(function () {
$('select[multiple]').select2({closeOnSelect: false, language: 'fr', selectionCssClass: 'custom-select2'});
});
			</script>
		</body>
	</html>
</body></html>
