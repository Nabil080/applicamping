					<svg class="stroke-current" stroke-width="1.5" width="20" height="20" viewbox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
						<path d="M10.5 6a7.5 7.5 0 1 0 7.5 7.5h-7.5V6Z" stroke-linecap="round" stroke-linejoin="round"></path>
						<path d="M13.5 10.5H21A7.5 7.5 0 0 0 13.5 3v7.5Z" stroke-linecap="round" stroke-linejoin="round"></path>
					</svg>
					{% endset %}
					{{ sidebar.basic("Statistiques","homepage",svg) }}

					{% set svg %}
					<svg class="stroke-current" stroke-width="1.5" width="20" height="20" viewbox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
						<path d="M15.75 6a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0ZM4.501 20.118a7.5 7.5 0 0 1 14.998 0A17.933 17.933 0 0 1 12 21.75c-2.676 0-5.216-.584-7.499-1.632Z" stroke-linecap="round" stroke-linejoin="round"></path>
					</svg>
					{% endset %}
					{{ sidebar.basic("Clients","app_admin_clients",svg) }}

					{% set svg %}
					<svg class="stroke-current" stroke-width="1.5" width="20" height="20" viewbox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
						<path d="M2.25 8.25h19.5M2.25 9h19.5m-16.5 5.25h6m-6 2.25h3m-3.75 3h15a2.25 2.25 0 0 0 2.25-2.25V6.75A2.25 2.25 0 0 0 19.5 4.5h-15a2.25 2.25 0 0 0-2.25 2.25v10.5A2.25 2.25 0 0 0 4.5 19.5Z" stroke-linecap="round" stroke-linejoin="round"></path>
					</svg>
					{% endset %}
					{{ sidebar.basic("Paiements","app_admin_paiements",svg) }}

				</ul>
			</div>

			<!-- ! Super admin -->
			<div>
				<h3 class="text-bodydark2 mb-4 ml-4 text-sm font-medium">
					ADMINISTRATEUR
				</h3>

				<ul
					class="mb-6 flex flex-col gap-1.5">
					<!-- Menu Item Paramètres -->
					<li>
				<ul class="mb-6 flex flex-col gap-1.5">
					{% set svg %}
					<svg class="stroke-current" stroke-width="1.5" width="20" height="20" viewbox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
