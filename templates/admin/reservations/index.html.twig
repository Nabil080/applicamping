						{{ crud.seeMoreButton(id) }}
						{{ crud.updateButton(id) }}
						{{ crud.printButton(id,"Facture") }}
						{{ crud.deleteButton(id) }}
					</div>
				</td>
			</tr>
		{% endfor %}
	</tbody>
</table>

{% endset %}

{% block body %}
	{{ crud.fullTable(title, table, filters, search_placeholder, tooltip) }}
{% endblock %}
