{% macro numberCard(name, number, more, svg) %}
	<!-- Card Item Start -->
	<div class="basic-card px-7.5 py-6">
		<div class="h-11.5 w-11.5 bg-meta-2 dark:bg-meta-4 flex items-center justify-center rounded-full">
			<svg class="fill-primary dark:fill-white" width="22" height="22" viewbox="0 0 22 22" fill="none" xmlns="http://www.w3.org/2000/svg">
				{{ svg|raw }}
			</svg>
		</div>

		<div class="mt-4">
			<h4 class="text-title-md font-bold text-black dark:text-white">
				{{number}}
			</h4>
			<div class="flex flex-wrap items-end justify-between">
				<span class="text-sm font-medium">{{name}}</span>

				<span class="text-meta-5 flex items-center gap-1 text-sm font-medium underline-animation hover:text-opacity-80">
					<a href={{ more.link }}>
						{{ more.text }}
					</a>
				</span>
			</div>
		</div>
	</div>
	<!-- Card Item End -->
{% endmacro %}

{% macro pieChart(title, more, series, labels) %}
	<div {{ stimulus_controller('chart--pie') }} data-chart--pie-series-value={{ series|json_encode }} data-chart--pie-labels-value={{ labels|json_encode }} class="basic-card pt-7.5  sm:px-7.5 col-span-12 px-5 pb-5 xl:col-span-6">
		<div class="mb-3 justify-between gap-4 sm:flex">
			<div>
				<h4 class="text-xl font-bold text-black dark:text-white">
					{{ title }}
				</h4>
			</div>
			<div>
				<div class="text-meta-5 relative z-20 inline-block underline-animation hover:text-opacity-80">
					<a href={{ more.link }}>
						{{ more.text }}
					</a>
				</div>
			</div>
		</div>
		<div class="mb-2">
			<div {{ stimulus_target('chart--pie','div') }} class="mx-auto flex justify-center"></div>
		</div>
	</div>

{% endmacro %}

{% macro textCard(text, more, svg) %}
	<div class="basic-card px-7.5 col-span-full lg:col-span-6 xl:col-span-4 py-6 grid place-content-center">
		<div class="flex items-center gap-4">
			<div class="h-11.5 w-11.5 bg-meta-2 dark:bg-meta-4 flex items-center justify-center rounded-full">
				<svg data-slot="icon" aria-hidden="true" fill="none" stroke-width="1.5" viewbox="0 0 20 22" xmlns="http://www.w3.org/2000/svg" class="stroke-primary dark:stroke-white" width="20" height="22">
					{{ svg|raw }}
				</svg>
			</div>

			<h4 class="text-title-md font-bold text-black dark:text-white">
				{{ text }}
			</h4>
		</div>

		<div class="text-center">

			<span class="text-meta-5 gap-1 text-sm font-medium hover:text-opacity-80 underline-animation">
				<a href={{ more.link }}>
					{{ more.text }}
				</a>
			</span>
		</div>
	</div>
{% endmacro %}


{% macro imageCard(name,pathName,svg) %}
	<!-- Card Item Start -->
	<article class="basic-card col-span-full sm:col-span-6 xl:col-span-4 flex flex-col">
		<div class="px-12">
			{{ svg }}
		</div>
		<div class="grow grid place-items-center">
			<a href={{path(pathName)}} class="btn w-full">{{name}}</a>
		</div>
	</article>
{% endmacro %}
