{% extends 'admin/settings/base.html.twig' %}
{% import 'admin/macro/dashboard_cells.html.twig' as cell %}
{% import "macro/svg.html.twig" as svg %}


{% block title %}
	Accueil
{% endblock %}

{% block body %}
	<!-- ! card items -->
	<div class="2xl:gap-7.5 grid grid-cols-12 gap-4 md:gap-6 text-base xl:text-lg">
		{# <div class="2xl:gap-7.5 grid grid-cols-1 gap-4 md:grid-cols-2 md:gap-6"> #}
		{# ! administration ! #}
			<div class="col-span-full"> <h2>
				Administrations
			</h2>
		</div>

		<!-- Card Item Start -->
		<article class="basic-card col-span-full xl:col-span-6">
			<h4 class="text-title-xsm xl:text-title-sm font-bold text-black dark:text-white">
				Infos camping
			</h4>
			<div class="grid mt-4 gap-2 text-black dark:text-bodydark">
				<div>
					<span class="font-semibold">Nom :</span>
					Camping mont olympe
				</div>
				<div>
					<span class="font-semibold">Adresse :</span>
					17 rue des Paquerettes, 08000 Charleville-Mézières, France
				</div>
				<div>
					<span class="font-semibold">Tel :</span>
					06.06.06.06.06
				</div>
				<div>
					<span class="font-semibold">Mail :</span>
					camping@contact.com
				</div>

			</div>
			<div class="text-end mt-2">
				<a href="" class="clickable block">
					Modifier
				</a>
			</div>
		</article>

		<article class="basic-card flex flex-col col-span-full xl:col-span-6">
			<h4 class="text-title-xsm xl:text-title-sm font-bold text-black dark:text-white">
				Dernières actions
			</h4>

			<div class="overflow-y-scroll grow max-h-60 xl:h-1">
				{% for i in 1..10 %}
					<a href="messages.html" class="flex items-center gap-5 py-3 px-7.5 hover:bg-gray-3 dark:hover:bg-meta-4 text-black dark:text-bodydark">
						<div class="relative h-8 w-8 rounded-full">
							<svg class="stroke-current" stroke-width="1.5" viewbox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
								<path d="M2.25 8.25h19.5M2.25 9h19.5m-16.5 5.25h6m-6 2.25h3m-3.75 3h15a2.25 2.25 0 0 0 2.25-2.25V6.75A2.25 2.25 0 0 0 19.5 4.5h-15a2.25 2.25 0 0 0-2.25 2.25v10.5A2.25 2.25 0 0 0 4.5 19.5Z" stroke-linecap="round" stroke-linejoin="round"></path>
							</svg>
						</div>
						<div class="flex flex-1 items-center justify-between">
							<div>
								<h5 class="font-medium dark:font-semibold">
									Nabil bellila
								</h5>
								<p>
									<span class="text-sm font-medium">Ajout d'un paiement (réservation)</span>
								</p>
							</div>
							<div>
								<span class="text-xs text-body">15 nov, 12h26</span>
							</div>
						</div>
					</a>
				{% endfor %}
			</div>
			<div class="text-end mt-2">
				<a href="" class="clickable block">
					Voir le registre
				</a>
			</div>
		</article>


		{# ! Camping ! #}
		<div class="col-span-full">
			<h2>
				Camping
			</h2>
		</div>

		<!-- Card Item Start -->
		<article class="basic-card col-span-full xl:col-span-8 flex flex-wrap xl:flex-nowrap gap-6 xl:gap-12">
			<section class="">
				<h4 class="text-title-xsm xl:text-title-sm font-bold text-black dark:text-white">
					120 emplacements, 5 types
				</h4>
				<div class="grid mt-4 gap-2 text-black dark:text-bodydark">
					<div>
						<span class="font-semibold">Camping-car :</span>
						22 emplacements
					</div>
					<div>
						<span class="font-semibold">Caravane :</span>
						30 emplacements
					</div>
					<div>
						<span class="font-semibold">Roulotte :</span>
						20 emplacements
					</div>
					<div>
						<span class="font-semibold">Emplacement simple :</span>
						12 emplacements
					</div>
					<div>
						<span class="font-semibold">Port :</span>
						12 emplacements
					</div>
				</div>
			</section>
			<section class="grid gap-2  grow">
				<button class="btn">Types d'hébèrgements</button>
				<button class="btn">Emplacements</button>
				<button class="btn">Carte interactive</button>
			</section>
		</article>

		<!-- Card Item Start -->
		<article class="basic-card col-span-full xl:col-span-4 grid grid-cols-1 sm:grid-cols-2 xl:grid-cols-1 gap-2">
			<div class="space-y-2">
				<div class="flex flex-wrap justify-between">
					<h4 class="text-title-xsm xl:text-title-sm font-bold text-black dark:text-white">
						Saison en cours
					</h4>
					<a href="" class=" clickable xl:block">
						Voir les saisons
					</a>
				</div>
				<div class="grid">
					<button class="btn max-xl:px-2 btn">Haute saison 2023</button>
				</div>
			</div>
			<div class="space-y-2">
				<h4 class="text-title-xsm xl:text-title-sm font-bold text-black dark:text-white">
					Prochaine saison
				</h4>
				<div class="grid">
					<button class="btn max-xl:px-2 btn-border pointer-events-none">Basse saison 2024</button>
				</div>
			</div>

			{# <div class="text-end">
																															<a href="" class="clickable block">
																																Modifier
																															</a>
																														</div> #}
		</article>


		{# ! Paramètres ! #}
		<div class="col-span-full">
			<h2>
				Personnaliser
			</h2>
		</div>

		{% set svg %}
		<svg class="stroke-current w-full" stroke-width="1.5" class="" viewbox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
			<path d="M2.25 18.75a60.07 60.07 0 0 1 15.797 2.101c.727.198 1.453-.342 1.453-1.096V18.75M3.75 4.5v.75A.75.75 0 0 1 3 6h-.75m0 0v-.375c0-.621.504-1.125 1.125-1.125H20.25M2.25 6v9m18-10.5v.75c0 .414.336.75.75.75h.75m-1.5-1.5h.375c.621 0 1.125.504 1.125 1.125v9.75c0 .621-.504 1.125-1.125 1.125h-.375m1.5-1.5H21a.75.75 0 0 0-.75.75v.75m0 0H3.75m0 0h-.375a1.125 1.125 0 0 1-1.125-1.125V15m1.5 1.5v-.75A.75.75 0 0 0 3 15h-.75M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Zm3 0h.008v.008H18V10.5Zm-12 0h.008v.008H6V10.5Z" stroke-linecap="round" stroke-linejoin="round"></path>
		</svg>
		{% endset %}

		{{ cell.imageCard("Règles de réservation","app_admin_settings",svg) }}
		{{ cell.imageCard("Tarifs","app_admin_settings",svg) }}
		{{ cell.imageCard("Options supplémentaires","app_admin_settings",svg) }}
	</div>
{% endblock %}
